<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
http://www.springframework.org/schema/tx 
http://www.springframework.org/schema/tx/spring-tx-3.1.xsd
http://www.springframework.org/schema/context 
http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<bean id="urlDownloadService" class="${urlDownloadService.impl}" />

	<bean id="emailService" class="${emailService.impl}" />

	<bean id="configurationManagerService" class="com.jdom.mediadownloader.services.ConfigurationManager" />

	<bean id="seriesNotifier" class="com.jdom.mediadownloader.services.SeriesNotifier">
		<constructor-arg ref="configurationManagerService" />
		<constructor-arg ref="emailService" />
	</bean>

	<bean id="seriesDownloadQueueManager"
		class="com.jdom.services.series.download.queue.SeriesDownloadDatabaseQueue">
		<constructor-arg ref="dasFactory" />
	</bean>

	<bean id="seriesDownloadProcessor"
		class="com.jdom.services.series.download.SeriesDownloadProcessor">
		<constructor-arg ref="dasFactory" />
		<constructor-arg ref="seriesLinkFinder" />
		<constructor-arg ref="nzbDownloader" />
	</bean>

	<bean id="mediaDownloader" class="com.jdom.mediadownloader.MediaDownloader">
		<constructor-arg ref="seriesDownloadProcessor" />
	</bean>

	<bean id="seriesLinkFinder" class="com.jdom.services.series.util.NzbIndexRssFeedLinkFinder">
		<constructor-arg ref="configurationManagerService" />
		<constructor-arg ref="urlDownloadService" />
	</bean>

	<bean id="nzbDownloader" class="${nzbDownloader.impl}">
		<constructor-arg ref="dasFactory" />
		<constructor-arg ref="configurationManagerService" />
		<constructor-arg ref="urlDownloadService" />
		<constructor-arg ref="seriesNotifier" />
	</bean>

	<!-- Set static variable instances -->
	<bean id="seriesService" class="com.jdom.mediadownloader.services.series.SeriesService">
		<constructor-arg ref="dasFactory" />
	</bean>

	<bean id="seriesDownloadUtil" class="com.jdom.services.series.download.util.SeriesDownloadUtil">
		<constructor-arg ref="configurationManagerService" />
		<constructor-arg ref="seriesDownloadQueueManager" />
	</bean>

</beans>