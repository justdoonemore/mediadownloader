<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
http://www.springframework.org/schema/tx 
http://www.springframework.org/schema/tx/spring-tx-3.1.xsd
http://www.springframework.org/schema/context 
http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<context:property-placeholder />
	<context:annotation-config />
	<tx:annotation-driven />

	<bean id="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
		<property name="entityManagerFactory" ref="entityManagerFactory" />
	</bean>

	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="${datasource.driver}" />
		<property name="url" value="${datasource.url}" />
		<property name="username" value="${datasource.username}" />
		<property name="password" value="${datasource.password}" />
	</bean>

	<bean id="entityManagerFactory"
		class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">

		<!-- jpaProperties-ref="jpaProperties" -->
		<property name="JpaDialect">
			<bean class="org.springframework.orm.jpa.vendor.HibernateJpaDialect" />
		</property>

		<property name="persistenceUnitName" value="${persistenceUnitName}" />
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="com.jdom.mediadownloader.services.UrlDownloadService" class="${urlDownloadService.impl}" />

	<bean id="downloadNzb" class="com.jdom.services.series.actions.DownloadNzb">
		<constructor-arg ref="com.jdom.mediadownloader.services.UrlDownloadService" />
	</bean>

	<bean id="seriesDownloadProcessor"
		class="com.jdom.services.series.download.SeriesDownloadProcessor">
		<constructor-arg ref="downloadNzb" />
	</bean>

	<bean id="mediaDownloader" class="com.jdom.mediadownloader.MediaDownloader">
		<constructor-arg ref="seriesDownloadProcessor" />
		<constructor-arg ref="nzbDownloader" />
	</bean>

	<bean id="nzbLinkFinder" class="com.jdom.services.series.util.NzbIndexRssFeedLinkFinder">
		<constructor-arg ref="com.jdom.mediadownloader.services.UrlDownloadService" />
	</bean>

	<bean id="nzbRetrieveAction" class="com.jdom.services.series.actions.NzbRetrieveAction" />

	<bean id="seriesDownloadUpdater" class="com.jdom.services.series.download.SeriesDownloadUpdater"
		factory-method="getInstance">
		<property name="nzbRetrieveAction" ref="nzbRetrieveAction" />
	</bean>


	<bean id="com.jdom.mediadownloader.services.ConfigurationManagerService"
		class="com.jdom.mediadownloader.services.ConfigurationManager">
		<property name="seriesLinkFinder" ref="nzbLinkFinder" />
	</bean>
	
	<bean id="nzbDownloader" class="${nzbDownloader.impl}">
		<constructor-arg ref="com.jdom.mediadownloader.services.ConfigurationManagerService" />
	</bean>

	<bean id="serviceLocator" class="com.jdom.services.util.ServiceLocator" />

	<bean id="com.jdom.mediadownloader.services.SeriesDASService" class="com.jdom.mediadownloader.services.SeriesDAS" />

	<bean id="com.jdom.mediadownloader.services.SeriesNotificationDASService"
		class="com.jdom.mediadownloader.services.SeriesNotificationDAS" />

	<bean id="com.jdom.mediadownloader.services.UserDASService" class="com.jdom.mediadownloader.services.UserDAS" />

	<bean id="com.jdom.mediadownloader.services.SeriesDownloadDASService"
		class="com.jdom.mediadownloader.services.SeriesDownloadDAS" />

	<bean id="seriesDownloadQueueManager"
		class="com.jdom.services.series.download.queue.SeriesDownloadDatabaseQueue" />

	<bean id="emailService" class="${emailService.impl}" />

</beans>